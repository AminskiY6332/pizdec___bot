# ================================================================
# AXIDI TELEGRAM BOT - ENVIRONMENT VARIABLES EXAMPLE
# ================================================================
# 
# Скопируйте этот файл в .env и заполните реальными значениями:
# cp .env.example .env
# nano .env
#
# ⚠️  ВАЖНО: Никогда не коммитьте .env файл в Git!
# ================================================================

# === TELEGRAM BOT ===
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# === REPLICATE AI ===
# Получите токен на https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here
REPLICATE_USERNAME_OR_ORG_NAME=your_replicate_username

# === YOOKASSA PAYMENTS ===
# Настройки для приема платежей через YooKassa
# Получите в личном кабинете YooKassa
YOOKASSA_SHOP_ID=your_yookassa_shop_id
YOOKASSA_SECRET=your_yookassa_secret_key
#YOOKASSA_TOKEN=your_yookassa_test_token  # Опционально для тестов

# === WEBHOOK ===
# URL для webhook (должен быть HTTPS в продакшне)
WEBHOOK_URL=https://your-domain.com/webhook

# === XAI API ===
# Токен для XAI API (опционально)
XAI_API_TOKEN=your_xai_api_token_here

# === SECURITY ===
# Секретный ключ для подписей (генерируйте случайный)
SECRET_KEY=your_secret_key_here

# === RATE LIMITING ===
# Ограничения на количество запросов
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_WINDOW_MINUTES=1

# === FILE UPLOADS ===
# Максимальный размер загружаемых файлов
MAX_FILE_SIZE_MB=50

# === CACHE ===
# Настройки кэширования
CACHE_TTL_SECONDS=300

# === DATABASE ===
# Путь к файлу базы данных SQLite
DATABASE_PATH=users.db

# === BACKUP SYSTEM ===
# Настройки автоматических бэкапов
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24

# === LOGGING ===
# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# === REDIS ===
# URL для подключения к Redis (опционально)
REDIS_URL=redis://localhost:6379/0

# === PRODUCTION ===
# Среда выполнения
ENVIRONMENT=production

# === PYTHON ===
# Настройки Python
PYTHONUNBUFFERED=1

# ================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ (опционально)
# ================================================================

# === PERFORMANCE ===
# Максимальное количество одновременных задач
MAX_CONCURRENT_TASKS=200
MAX_CONCURRENT_GENERATIONS=10

# === MONITORING ===
# URL для health check
HEALTH_CHECK_ENDPOINT=https://your-domain.com/health

# === ADMIN IDs ===
# ID администраторов бота (замените на реальные)
# Можно добавить в config.py или здесь
# ADMIN_IDS=123456789,987654321

